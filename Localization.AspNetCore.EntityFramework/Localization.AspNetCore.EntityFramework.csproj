        <DocumentationFile>bin\Release\net5.0\DbLocalizationProvider.AspNetCore.xml</DocumentationFile>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.2.0" />
        <PackageReference Include="Microsoft.AspNetCore.Localization" Version="2.2.0" />
        <PackageReference Include="Microsoft.EntityFrameworkCore" Version="5.0.0" />
        <PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="5.0.0" />
        <PackageReference Include="Microsoft.Extensions.Localization.Abstractions" Version="5.0.0" />
    </ItemGroup>
    <ItemGroup>
      <None Remove="signingKey.snk" />
    </ItemGroup>
</Project>
