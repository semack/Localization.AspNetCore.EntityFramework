<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <PackageId>Localization.AspNetCore.EntityFramework</PackageId>
        <TargetFramework>net5.0</TargetFramework>
        <PackageVersion>5.0.0</PackageVersion>
        <Title>Localization library for ASP.NET Core</Title>
        <Copyright>Â© 2020 Andriy S'omak</Copyright>
        <PackageProjectUrl>Localization.AspNetCore.EntityFramework</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/semack/Localization.AspNetCore.EntityFramework/blob/master/LICENSE.md</PackageLicenseUrl>
        <AssemblyVersion>5.0.0.0</AssemblyVersion>
        <FileVersion>5.0.0.0</FileVersion>
        <SignAssembly>true</SignAssembly>
        <AssemblyOriginatorKeyFile>signingKey.snk</AssemblyOriginatorKeyFile>
